<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/splash_fit</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="StandardTheme" parent="Theme.Base">
</style>


  	<!-- Base Theme -->
	<style name="Theme.Base" parent="Theme.AppCompat">
		<item name="windowNoTitle">true</item>
		 <item name="windowActionBar">false</item>
    	<item name="android:windowFullscreen">true</item>
    	<item name="android:windowContentOverlay">@null</item>

    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#252839</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#2b2f41</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#f2b632</item>
    </style>


	<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="color">#F5F5F5</item>
		<item name="spinBars">true</item>
	</style>



  <style name="button_text" >
    <item name="android:layout_width" >fill_parent</item>
    <item name="android:layout_height" >wrap_content</item>
    <item name="android:textColor" >#ffffff</item>
    <item name="android:gravity" >center</item>
    <item name="android:layout_margin" >2dp</item>
    <item name="android:textSize" >20dp</item>
    <item name="android:textStyle" >bold</item>
  </style>
</resources>
